<p id="notice"><%= notice %></p>

<h1>Listing Cpm Comments</h1>

<table>
  <thead>
    <tr>
      <th>Cpm user</th>
      <th>Cpm issue</th>
      <th>Cpm task</th>
      <th>Cpm project</th>
      <th>Content</th>
      <th>Attachments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cpm_comments.each do |cpm_comment| %>
      <tr>
        <td><%= cpm_comment.cpm_user_id %></td>
        <td><%= cpm_comment.cpm_issue_id %></td>
        <td><%= cpm_comment.cpm_task_id %></td>
        <td><%= cpm_comment.cpm_project_id %></td>
        <td><%= cpm_comment.content %></td>
        <td><%= cpm_comment.attachments %></td>
        <td><%= link_to 'Show', cpm_comment %></td>
        <td><%= link_to 'Edit', edit_cpm_comment_path(cpm_comment) %></td>
        <td><%= link_to 'Destroy', cpm_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

